{% extends "../partials/dashboardLayout.njk" %}
{% from "govuk/components/select/macro.njk" import govukSelect %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "../macros/prisoners-table.njk" import prisonersTable %}
{% block content %}
  <h1 class="govuk-heading-xl">Prepare someone for release</h1>
  <form id="staff-dashboard-filters" action="/" method="GET">
    <div class="govuk-grid-row filters govuk-!-margin-bottom-4">
      <div class="govuk-grid-column-two-thirds">
        <div class="govuk-grid-row">
          <div class="govuk-grid-column-full">
            <h3 class="govuk-heading-m">Filter by:</h3>
          </div>
          <div class="govuk-grid-column-full">
            <div class="govuk-form-group">
              {{ govukSelect({
                id: "prisonSelected",
                name: "prisonSelected",
                label: {
                  text: "Select prison"
                },
                items: prisonSelectList
              }) }}
            </div>
          </div>
        </div>
      </div>
      <div class="govuk-grid-column-full">
        {{ govukButton({
          text: "Update table"
        }) }}
      </div>
    </div>
  </form>
  {% if prisonersList %}
    <h3 class="govuk-heading-l">All pathways overview</h3>
    {{ prisonersTable(prisonersList.content) }}
  {% endif %}
{% endblock %}