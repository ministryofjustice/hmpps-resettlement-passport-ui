{% extends "../partials/layout.njk" %}

{% set pathway = "Attitudes, thinking and behaviour" %}
{% set pageTitle = applicationName + " - " + pathway %}
{% set mainClasses = "app-container govuk-body" %}

{% block content %}

  <div class="govuk-grid-row govuk-!-padding-top-4 govuk-!-padding-bottom-4">

    {{ titleAndIntro(
      pathway,
      'Understand someoneâ€™s risks around how they think and behave and ensure any needs in this area are met.'
      ) }}
    <div class="govuk-grid-column-one-third">

      <!-- Pathway status -->
      {{ statusDetails(pathway, 'CLOSED') }}
    </div>

  </div>
  <div class="govuk-grid-row govuk-!-padding-top-4">

    <!-- Main content area -->
    <!-- Pathway side nav -->
    <div class="govuk-grid-column-one-quarter">
      {{ subNav([
        {
          name: "Risk assessment",
          id: "risk-assessment"
        },
        {
          name: "Individual risks",
          id: "individual-risks"
        },
        {
          name: "Other risks",
          id: "other-risks"
        }
      ]) }}
    </div>
    <div class="govuk-grid-column-three-quarters">

      <section id="risk-assessment" class="app-summary-card govuk-!-margin-bottom-8">
        <header class="app-summary-card__header">
          <h3 class="app-summary-card__title">
                    Risk assessment<span class="govuk-caption-m">Data sourced from OASys</span>
          </h3>
          <span class="right"></span>
        </header>

        <div class="app-summary-card__body">
          {{ govukTable({
                    firstCellIsHeader: true,
                    rows: [
                      [
                        {
                          text: "Risk to others"
                        },
                        {
                          text: "No"
                        }
                      ],
                      [
                        {
                          text: "Risk to children"
                        },
                        {
                          text: "No"
                        }
                      ],
                      [
                        {
                          text: "Risk to self"
                        },
                        {
                          text: "No"
                        }
                        ],
                        [
                        {
                          text: "Convicted offences"
                        },
                        {
                          text: "Grievous bodily harm"
                        }
                        ]
                      ]
                  }) }}
        </div>
      </section>

      <section id="individual-risks" class="app-summary-card govuk-!-margin-bottom-8">
        <header class="app-summary-card__header">
          <h3 class="app-summary-card__title">
                    Individual risks<span class="govuk-caption-m">Data sourced from OASys</span>
          </h3>
          <span class="right"></span>
        </header>

        <div class="app-summary-card__body">
          {{ govukTable({
                    firstCellIsHeader: true,
                    rows: [
                      [
                        {
                          text: "Risk of suicide"
                        },
                        {
                          text: "No"
                        }
                      ],
                      [
                        {
                          text: "Risk of self harm"
                        },
                        {
                          text: "No"
                        }
                      ],
                      [
                        {
                          text: "Coping in custody"
                        },
                        {
                          text: "No"
                        }
                        ],
                        [
                        {
                          text: "Vulnerable"
                        },
                        {
                          text: "No"
                        }
                        ]
                      ]
                  }) }}
        </div>

      </section>

      <section id="other-risks" class="app-summary-card govuk-!-margin-bottom-8">
        <header class="app-summary-card__header">
          <h3 class="app-summary-card__title">
                    Other risks<span class="govuk-caption-m">Data sourced from OASys</span>
          </h3>
          <span class="right"></span>
        </header>

        <div class="app-summary-card__body">
          {{ govukTable({
                    firstCellIsHeader: true,
                    rows: [
                      [
                        {
                          text: "Escape/abscondment risk"
                        },
                        {
                          text: "No"
                        }
                      ],
                      [
                        {
                          text: "Control issues"
                        },
                        {
                          text: "Yes"
                        }
                      ],
                      [
                        {
                          text: "Breach of trust"
                        },
                        {
                          text: "Yes"
                        }
                        ],
                        [
                        {
                          text: "Risk to other prisoners"
                        },
                        {
                          text: "No"
                        }
                        ]
                      ]
                  }) }}
        </div>
      </section>
    </div>
  </div>
{% endblock %}