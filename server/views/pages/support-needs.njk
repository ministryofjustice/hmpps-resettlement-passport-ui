{% extends "../partials/layout.njk" %}
{% set pageTitle = applicationName + " - " + pathway + " Support Needs" %}
{% set mainClasses = "app-container govuk-body" %}
{% set prisonerNumber = prisonerData.personalDetails.prisonerNumber %}
{% set supportNeedsEnabled = features.SUPPORT_NEEDS | getFeatureFlag %}
{% block header %}
  {% if feComponents.header %}
    {{ feComponents.header | safe }}
  {% else %}
    {% include "../partials/header.njk" %}
  {% endif %}
  <div class="govuk-width-container">
    {{ govukPhaseBanner({
      tag: {
      text: phaseName
      },
      html: feedbackText
      }) }}
  </div>
{% endblock %}
{% block content %}
  <div class="govuk-grid-row govuk-!-padding-top-8">
    <div class="govuk-grid-column-three-quarters">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
          <h1 class="govuk-heading-l">Add {{ pathway | getNameFromUrl | lower }} support needs</h1>
          <span class="govuk-hint">Select any support needs you have identified that could be met by the prison resettlement team, community probation staff or by referral to a third party provider.</span>
        </div>
      </div>
      <form action="" class="govuk-form" method="POST">
        <div class="govuk-form-group govuk-!-padding-top-6">
          <fieldset class="govuk-fieldset">
            <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
              <h2 class="govuk-fieldset__heading">Current accommodation</h2>
            </legend>
            <div class="govuk-checkboxes" data-module="govuk-checkboxes">
              <div class="govuk-checkboxes__item">
                <input class="govuk-checkboxes__input">
                <label class="govuk-label govuk-checkboxes__label">Arrange storage for personal possessions</label>
              </div>
              <div class="govuk-checkboxes__item">
                <input class="govuk-checkboxes__input">
                <label class="govuk-label govuk-checkboxes__label">Help to keep their home while in prison</label>
              </div>
              <div class="govuk-checkboxes__divider">or</div>
              <div class="govuk-checkboxes__item">
                <input class="govuk-checkboxes__input">
                <label class="govuk-label govuk-checkboxes__label">No personal support needs identified</label>
              </div>
            </div>
          </fieldset>
        </div>
      </form>
    </div>
  </div>
{% endblock %}