{% extends "../partials/layout.njk" %}
{% set pageHeading = "All pathways overview" %}
{% from "../macros/prisoners-table.njk" import prisonersTable %}

{% block content %}
  <div class="govuk-tabs" data-module="govuk-tabs" id="tabs">
    <ul class="govuk-tabs__list">
      <li class="govuk-tabs__list-item">
        <a class="tab-links" href="/">People in prison</a>
      </li>
      <li class="govuk-tabs__list-item govuk-tabs__list-item--selected">
        <a class="tab-links" href="/assign-a-case">Assign a case</a>
      </li>
    </ul>
    <div class="govuk-tabs__panel">
      {% if prisonersList %}
        <table class="govuk-table" data-module="moj-multi-select" data-multi-select-checkbox="#select-all">
          <thead class="govuk-table__head">
            <tr class="govuk-table__row">
              <th class="govuk-table__header" scope="col" id="select-all"></th>
              <th scope="col" class="govuk-table__header" data-column="name" aria-sort="none">
                <button type="button">Name</button>
              </th>
              <th scope="col" class="govuk-table__header" data-column="release" aria-sort="release">
                <button type="button">Release date</button>
              </th>
              <th scope="col" class="govuk-table__header" data-column="status" aria-sort="status">
                <button type="button">Assigned resettlement worker</button>
              </th>
            </tr>
          </thead>
          <tbody class="govuk-table__body">
            {% for prisoner in prisonersList.content %}
              <tr class="govuk-table__row govuk-table__row--selected">
                <td class="govuk-table__cell">
                  <div class="govuk-checkboxes__item govuk-checkboxes--small moj-multi-select__checkbox">
                    <input type="checkbox" class="govuk-checkboxes__input" id="{{ prisoner.prisonerNumber }}">
                    <label class="govuk-label govuk-checkboxes__label" for="{{ prisoner.prisonerNumber }}">
                      <span class="govuk-visually-hidden">Select {{ prisoner.firstName }} {{ prisoner.lastName }}</span>
                    </label>
                  </div>
                </td>
                <td class="govuk-table__cell">
                  <a href="/prisoner-overview/?prisonerNumber={{ prisoner.prisonerNumber }}">{{ prisoner.lastName | toTitleCase }}, {{ prisoner.firstName | toTitleCase }}</a>
                  <br/>
                  <span class="govuk-hint" id="prisonerNumber">
                    {{ prisoner.prisonerNumber }}
                  </span>
                </td>
                <td class="govuk-table__cell" id="releaseDate">
                  <span class="no-wrap">{{ prisoner.releaseDate | formatDate }}</span> <br/>
                  {% if prisoner.releaseDate | isFriday %}<span class="govuk-body-s" id="fridayRelease" aria-hidden="true">⚠️ Friday <br/></span><span class="govuk-visually-hidden"> Warning: release date is a Friday </span>{% endif %}
                </td>
                <td class="govuk-table__cell">
                  {% if prisoner.assignedWorkerFirstname and prisoner.assignedWorkerLastname %}
                    <span class="no-wrap">{{ prisoner.assignedWorkerFirstname }} {{ prisoner.assignedWorkerLastname }}</span> <br/>
                  {% else %}
                    – <span class="govuk-visually-hidden">No resettlement worker assigned</span>
                  {% endif %}
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
        {% if pagination.pages %}
          <nav class="govuk-pagination" aria-label="Pagination">
            {% for page in pagination.pages %}
              {% if page.pageType === "previous" %}
                <div class="govuk-pagination__prev">
                  <a class="govuk-link govuk-pagination__link" href="/assign-a-case/?currentPage={{ page.pageNumber }}" rel="prev">
                    <svg class="govuk-pagination__icon govuk-pagination__icon--prev" xmlns="http://www.w3.org/2000/svg" height="13" width="15" aria-hidden="true" focusable="false" viewBox="0 0 15 13">
                      <path d="m6.5938-0.0078125-6.7266 6.7266 6.7441 6.4062 1.377-1.449-4.1856-3.9768h12.896v-2h-12.984l4.2931-4.293-1.414-1.414z"></path>
                    </svg>
                    <span class="govuk-pagination__link-title">
                      Previous<span class="govuk-visually-hidden"> page</span>
                    </span>
                  </a>
                </div>
              {% endif %}
            {% endfor %}
            <ul class="govuk-pagination__list">
              {% for page in pagination.pages %}
                {% if page.pageType === "ellipses" %}
                  <li class="govuk-pagination__item govuk-pagination__item--ellipses">
                    &ctdot;
                  </li>
                {% endif %}
                {% if page.pageType === "number" %}
                  <li class="govuk-pagination__item {{ "govuk-pagination__item--current" if page.isCurrent }}">
                    <a
                      class="govuk-link govuk-pagination__link"
                      href="/assign-a-case/?currentPage={{ page.pageNumber }}"
                      aria-label="Page {{ page.pageNumber + 1 }}"
                    >
                      {{ page.pageNumber + 1 }}
                    </a>
                  </li>
                {% endif %}
              {% endfor %}
            </ul>
            {% for page in pagination.pages %}
              {% if page.pageType === "next" %}
                <div class="govuk-pagination__next">
                  <a class="govuk-link govuk-pagination__link" href="/assign-a-case/?currentPage={{ page.pageNumber }}" rel="next">
                    <span class="govuk-pagination__link-title">
                      Next<span class="govuk-visually-hidden"> page</span>
                    </span>
                    <svg class="govuk-pagination__icon govuk-pagination__icon--next" xmlns="http://www.w3.org/2000/svg" height="13" width="15" aria-hidden="true" focusable="false" viewBox="0 0 15 13">
                      <path d="m8.107-0.0078125-1.4136 1.414 4.2926 4.293h-12.986v2h12.896l-4.1855 3.9766 1.377 1.4492 6.7441-6.4062-6.7246-6.7266z"></path>
                    </svg>
                  </a>
                </div>
              {% endif %}
            {% endfor %}
          </nav>
        {% endif %}
      {% endif %}
    </div>
  </div>
{% endblock %}