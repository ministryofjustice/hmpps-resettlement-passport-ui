{% extends "../partials/serviceUpdatesLayout.njk" %}
{% set pageName = "Service updates" %}

{% block content %}
  {% for bannerFile in banners %}
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <div class="govuk-summary-card">
          <div class="govuk-summary-card__title-wrapper">
            <h2 class="govuk-summary-card__title">{{ bannerFile.banner.date }}</h2>
          </div>
          <div class="govuk-summary-card__content">
            {%- if bannerFile.banner.title -%}
              <h3 class="govuk-header-s govuk-!-margin-top-0">{{ bannerFile.banner.title }}</h3>
            {%- endif %}

            {%- if bannerFile.banner.bodyText is string -%}
                <p class="govuk-body">{{ bannerFile.banner.bodyText | safe }}</p>
            {%- elseif bannerFile.banner.bodyText | length > 0 -%}
                {%- for body in bannerFile.banner.bodyText -%}
                  <p class="govuk-body">{{ body | safe }}</p>
                {%- endfor -%}
            {%- endif %}

            {%- if bannerFile.banner.bulletPoints | length > 0 -%}
              <ul class="govuk-list govuk-list--bullet">
                {% for point in bannerFile.banner.bulletPoints %}
                  <li>{{ point }}</li>{% endfor %}
              </ul>
            {%- endif %}

            {%- if bannerFile.banner.detailsLink != null -%}
              <p>
                <a href="{{ bannerFile.banner.detailsLink }}">Find out more about this update</a>
              </p>
            {%- endif %}
          </div>
        </div>
      </div>
    </div>
  {% endfor %}
{% endblock %}