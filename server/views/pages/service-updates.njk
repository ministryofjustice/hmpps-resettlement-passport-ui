{% extends "../partials/serviceUpdatesLayout.njk" %}
{% from "../macros/service-update.njk" import serviceUpdate %}
{% set pageName = "Service updates" %}

{% block content %}
  {% for bannerFile in banners %}
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <div class="govuk-summary-card">
          <div class="govuk-summary-card__title-wrapper">
            <h2 class="govuk-summary-card__title">{{ bannerFile.banner.date }}</h2>
          </div>
          <div class="govuk-summary-card__content">
            {%- if bannerFile.banner.title -%}
              <h3 class="govuk-header-s govuk-!-margin-top-0">{{ bannerFile.banner.title }}</h3>
            {%- endif %}

            {{ serviceUpdate(bannerFile.banner.bodyText, bannerFile.banner.bulletPoints, bannerFile.banner.detailsLink) }}
          </div>
        </div>
      </div>
    </div>
  {% endfor %}
{% endblock %}