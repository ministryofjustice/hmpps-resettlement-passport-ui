{% extends "../partials/layout.njk" %}

{% set pathway = "Health" %}
{% set pageTitle = applicationName + " - " + pathway %}
{% set mainClasses = "app-container govuk-body" %}

{% block content %}
    <div class="govuk-grid-row govuk-!-padding-top-4 govuk-!-padding-bottom-4">

        {{ titleAndIntro(
      pathway,
      'Ensure that the physical and mental health needs of prison leavers are met.'
      ) }}
        <div class="govuk-grid-column-one-quarter">

            <!-- Pathway status -->

            <div>
                <form action="/beta_1-attitudes-form-0" method="POST">
                    <div class="govuk-form-group">
                        <label class="govuk-label" for="attitudesstatus">
                            {{ pathway | capitalize }} readiness status:
            </label>
                        <select class="govuk-select" id="attitudesstatus" name="attitudesreadinessstatus">
                            <option value="unbegun">Not started</option>
                            <option value="declined">Support declined</option>
                            <option value="progress" selected="">In progress</option>
                            <option value="incomplete">Incomplete</option>
                            <option value="done">Complete</option>
                            <option value="unrequired">Support not required</option>
                        </select>
                        <input type="hidden" id="updated" name="updated" value="today">
                    </div>
                </form>
            </div>

        </div>
    </div>
    <div class="govuk-grid-row govuk-!-padding-top-4">

        <!-- Main content area -->
        <div class="govuk-grid-column-one-quarter">

            <!-- Pathway subnav -->

            {{ subNav([
        {
          name: "Emotional wellbeing support referral",
          id: "ews-referral"
        }
      ]) }}
        </div>
        <div class="govuk-grid-column-three-quarters">

            <section id="ews-referral" class="app-summary-card govuk-!-margin-bottom-8">
                <header class="app-summary-card__header">
                    <h3 class="app-summary-card__title">
                    Emotional wellbeing support referral<span class="govuk-caption-m">Data sourced from nDelius</span>
                    </h3>
                    <span class="right"></span>

                </header>

                <div class="app-summary-card__body">
                    <table class="govuk-table">
                        <tbody class="govuk-table__body">
                            <tr class="govuk-table__row">
                                <th scope="row" class="govuk-table__header">Referral required</th>
                                <td class="govuk-table__cell">Yes</td>

                            </tr>
                            <tr class="govuk-table__row">
                                <th scope="row" class="govuk-table__header">Status</th>
                                <td class="govuk-table__cell">Completed</td>

                            </tr>
                            <tr class="govuk-table__row">
                                <th scope="row" class="govuk-table__header">Provider</th>
                                <td class="govuk-table__cell">EWS Provider</td>

                            </tr>
                            <tr class="govuk-table__row">
                                <th scope="row" class="govuk-table__header">Provider address</th>
                                <td class="govuk-table__cell">123 A Street, Manchester, M5 6FG</td>

                            </tr>
                            <tr class="govuk-table__row">
                                <th scope="row" class="govuk-table__header">Provider phone</th>
                                <td class="govuk-table__cell">0161 654 3211</td>

                            </tr>
                        </tbody>
                    </table>

                </div>
            </section>

        </div>
    </div>

{% endblock %}