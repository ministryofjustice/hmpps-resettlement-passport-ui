{% extends "../partials/layout.njk" %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}
{% set pathway = "" %}
{% set pageTitle = applicationName + " - Reset profile success" %}
{% set mainClasses = "app-container govuk-body" %}
{% set supportNeedsEnabled = features.SUPPORT_NEEDS | getFeatureFlag %}

{% block header %}
  {% if feComponents.header %}
    {{ feComponents.header | safe }}
  {% else %}
    {% include "../partials/header.njk" %}
  {% endif %}
  <div class="govuk-width-container">
    {{ govukPhaseBanner({
      tag: {
        text: phaseName
      },
      html: feedbackText
    }) }}
  </div>
{% endblock %}
{% block content %}
  <div class="govuk-grid-row govuk-!-padding-top-4 govuk-!-padding-bottom-4">
    <div class="govuk-grid-column-full">
      <div class="govuk-grid-row ">
        <div class="govuk-grid-column-three-quarters">
          <div class="govuk-panel govuk-panel--confirmation">
            <h1 class="govuk-panel__title">Reports and {{ "support needs" if supportNeedsEnabled else "statuses" }} reset</h1>
            <div class="govuk-panel__body">
              <p class="text-white">Contact the service desk if you think there's a problem.</p>
            </div>
          </div>
        </div>
      </div>
      <a href="/prisoner-overview?prisonerNumber={{ prisonerData.personalDetails.prisonerNumber }}">Return to overview</a>
    </div>
  </div>
{% endblock %}