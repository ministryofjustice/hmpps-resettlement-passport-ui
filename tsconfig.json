{
  "compileOnSave": true,
  "compilerOptions": {
    "lib": ["ES2023"],
    "module": "node16",
    "target": "ES2022",
    "outDir": "./dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "noEmit": false,
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "typeRoots": ["./server/@types", "./node_modules/@types"]
  },
  "exclude": [
    "node_modules",
    "assets/**/*.js",
    "integration_tests",
    "dist",
    "cypress.config.ts",
    "E2E_Tests",
    "coverage"
  ],
  "include": ["**/*.js", "**/*.ts"]
}
